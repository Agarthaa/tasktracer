<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Overflow menu (three dots) only -->
    <item
        android:id="@+id/action_menu"
        android:title=""
        android:icon="@drawable/ic_more_vert"
        app:showAsAction="always">
        <menu>
            <!-- Profile -->
            <item
                android:id="@+id/action_profile"
                android:title="Profile"
                android:icon="@drawable/ic_person" />

            <!-- Filter submenu -->
            <item
                android:id="@+id/action_filter"
                android:title="Filter"
                android:icon="@drawable/ic_filter">
                <menu>
                    <group android:checkableBehavior="single">
                        <item
                            android:id="@+id/filter_all"
                            android:title="All Tasks" />
                        <item
                            android:id="@+id/filter_completed"
                            android:title="Completed" />
                        <item
                            android:id="@+id/filter_pending"
                            android:title="Pending" />
                        <item
                            android:id="@+id/filter_high_priority"
                            android:title="High Priority" />
                        <item
                            android:id="@+id/filter_today"
                            android:title="Today" />
                    </group>
                </menu>
            </item>

            <!-- Sort submenu -->
            <item
                android:id="@+id/action_sort"
                android:title="Sort"
                android:icon="@drawable/ic_sort">
                <menu>
                    <group android:checkableBehavior="single">
                        <item
                            android:id="@+id/sort_priority"
                            android:title="Priority" />
                        <item
                            android:id="@+id/sort_due_date"
                            android:title="Due Date" />
                        <item
                            android:id="@+id/sort_title"
                            android:title="Title" />
                        <item
                            android:id="@+id/sort_created"
                            android:title="Created Date" />
                    </group>
                </menu>
            </item>

            <item
                android:id="@+id/action_logout"
                android:title="Logout"
                android:icon="@drawable/ic_logout" />
        </menu>
    </item>

</menu>