<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:padding="24dp">

    <!-- Icon -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_circle_primary"
        android:padding="16dp"
        android:src="@drawable/ic_lock_reset"
        android:contentDescription="Reset password"
        app:tint="?attr/colorOnPrimary" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Reset Password"
        android:textColor="?attr/colorOnSurface"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Enter your email address and we'll send you a link to reset your password"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp" />

    <!-- Email Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="?attr/colorSurface"
        app:boxStrokeColor="?attr/colorOutline"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintTextColor="?attr/colorOnSurfaceVariant"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="?attr/colorOnSurfaceVariant"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_reset_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:minHeight="56dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Info Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="We'll send a reset link to this email"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp" />

    <!-- Send Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSend"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Reset Link"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary" />

</LinearLayout>
